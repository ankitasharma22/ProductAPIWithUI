@model IEnumerable<ProductBookinUI.Models.AirProduct>

@{
    ViewBag.Title = "GetAirProducts";
}

<h2>GetAirProducts</h2>

<p>
    @Html.ActionLink("Get Saved Items", "GetSavedProds")
</p>
<p>@Html.ActionLink("Get Booked Items", "GetBookedProds")</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FlightCompany)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartureDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArrivalDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FromPlace)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToPlace)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FlightCompany)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartureDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArrivalDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FromPlace)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToPlace)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
       
        <td>
            @Html.ActionLink("Book", "OnBookClick", new { @productId = item.Id }) |
            @Html.ActionLink("Save", "OnSaveClick", new { @productId = item.Id })
            
        </td>
    </tr>
}

</table>

